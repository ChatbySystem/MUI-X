{
  "extends": "../../../../tsconfig.json",
  "compilerOptions": {
    "traceResolution": true,
    "declaration": true,
    "declarationDir": "./dist",
    "module": "es6",
    "noImplicitAny": true,
    "strict": true,
    "outDir": "./dist",
    "target": "es6",
    "sourceMap": true,

    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "../../modules/src/*"
      ]
    }
  },
  "include": ["./src" ,  "../../modules/src" ],
  "exclude": [
    "__tests__",
    "**/*.test.ts",
    "node_modules",
    "../../node_modules",
    "../../../../node_modules",
    "lib"
  ]
}