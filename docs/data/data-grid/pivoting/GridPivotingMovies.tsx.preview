<input
  id={inputId}
  type="checkbox"
  checked={isPivot}
  onChange={(e) => setIsPivot(e.target.checked)}
/>
<label htmlFor={inputId}>Pivot</label>
<div style={{ height: 400, width: '100%' }}>
  <DataGridPremium
    key={isPivot.toString()}
    {...props}
    apiRef={apiRef}
    experimentalFeatures={{ columnGrouping: true }}
  />
</div>