<LocalizationProvider dateAdapter={AdapterDateFns}>
  <DatePicker
    label="Basic example"
    value={value}
    onChange={(newValue) => {
      setValue(newValue);
    }}
    renderInput={(params) => <TextField {...params} />}
    dayOfWeekFormatter={(day) => `${day}.`}
    toolbarFormat="eee dd MMMM"
    showToolbar
  />
</LocalizationProvider>